import testing ;

lib dl ;
lib pthread ;
lib Ice ;
lib IceUtil ;
lib boost_system ;
lib boost_filesystem ;
lib boost_utf : : <name>boost_unit_test_framework ;
lib slicer-test : : <name>slicertypes <search>bin/slicer ;
lib adhocutil : : : : <include>/usr/include/adhocutil ;

lib types :
	types.ice
	:
	<library>pthread
	<library>Ice
	<library>IceUtil
	<library>adhocutil
	<library>included//included
	<implicit-dependency>included//included
	: :
	<library>pthread
	<library>Ice
	<library>IceUtil
	<library>included//included
	;

path-constant me : . ;

lib common :
	helpers.cpp
	conversions.cpp
	fileStructure.cpp
	:
	<library>dl
	<library>types
	<library>boost_system
	<library>boost_filesystem
	<library>boost_utf
	<implicit-dependency>types
	<define>ROOT=\"$(me)\"
	: :
	<library>types
	<library>boost_filesystem
	<library>boost_system
	<define>BOOST_TEST_DYN_LINK
	<library>boost_utf
	<implicit-dependency>types
	;

run preprocessor.cpp
	: : :
	<linkflags>-rdynamic
	<library>dl
	<library>common
	<library>adhocutil
	<include>..
	<library>../slicer//slicer
	<dependency>../tool//slicer
	:
	preprocess
	;

run compilation.cpp
	: : :
	<include>..
	<library>../slicer//slicer
	<library>types
	<dependency>preprocess
	<library>slicer-test
	<library>common
	<include>..
	<library>../slicer//slicer
	:
	compilation
	;

run serializers.cpp
	: : :
	<dependency>preprocess
	<library>slicer-test
	<library>common
	<include>..
	<library>../slicer//slicer
	<library>../xml//slicer-xml
	<library>../json//slicer-json
	:
	serializers
	;

